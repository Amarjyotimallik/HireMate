# Application
APP_NAME=HireMate Backend
APP_VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB
MONGODB_URL=
MONGODB_DATABASE=hiremate

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=360
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Assessment Token
ASSESSMENT_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated origins) - * allows all origins (DEV ONLY!)
CORS_ORIGINS=http://localhost:5173,http://localhost:5175,http://localhost:3000

# Idle Detection
IDLE_THRESHOLD_MS=5000

# Development: call recruiter APIs without JWT (uses first active user). Set false in production.
DEV_MODE=true

# AI Services
GROQ_API_KEY=YOUR_GROQ_API_KEY (Provided in submission)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY (Provided in submission)

# Email Service (Resend)
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM_ADDRESS=HireMate <onboarding@resend.dev>

# Task Queue (Redis)
REDIS_URL=redis://localhost:6379/0
